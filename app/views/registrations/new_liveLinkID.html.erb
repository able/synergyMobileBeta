<div data-role="page">
<div class="ui-body ui-body-a">
<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.label :name %><br />
  <%= f.text_field :name %></p>

  <p><%= f.label 'LiveLink ID [optional]' %><br />
  <%= f.text_field :liveLinkID %></p>

  <p><%= f.label 'Username'%><br />
  <%= f.text_field :username %></p>

  <p><%= f.label 'Which MSRA Group are you in?' %><br />
  <%= f.collection_select :group, User.all_groups, :downcase, :titleize %>

  <p><%= f.label :email %><br />
  <%= f.email_field :email %></p>

  <p><%= f.label :phone_number %><br />
  <%= f.text_field :phone_number, :maxlength => 11 %></p>

  <p><%= f.label :password %><br />
  <%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></p>

  <p><%= f.submit "Sign up", 'data-theme' => 'e' %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>
</div>
</div>
