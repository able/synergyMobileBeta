<div data-role="page">
<div class="ui-body ui-body-a">
<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %>
<%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %>
<%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>
  <p>Name
  </br>
  <%= f.text_field :name %>
  </p>
  <p>LiveLink ID [optional] 
  <br />
  <%= f.text_field :liveLinkID %>
  </p>
  <p>Username
  <br />
  <%= f.text_field :username %>
  </p>
  <p>Which MSRA Group are you in?
  <br />
  <%= f.collection_select :group, User.all_groups, :downcase, :downcase %>
  </p>
  <p>Email
  <br />
  <%= f.email_field :email %>
  </p>
  <p>Phone Number [11 Digits]
  <br />
  <%= f.text_field :phone_number, :maxlength => 11 %>
  </p>
  <p>Password
  <br />
  <%= f.password_field :password %>
  </p>
  <p>Password Confirmation
  <br />
  <%= f.password_field :password_confirmation %>
  </p>
  <p><%= f.submit "Sign up", 'data-theme' => 'e' %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>
</div>
</div>
