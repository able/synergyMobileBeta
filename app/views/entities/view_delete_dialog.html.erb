<div data-role="page" id="mainpage" class="ui-page ui-body-c ui-page-active" style="min-height: 562px; ">
    <div data-role="header" data-theme="d" data-position="inline" class="ui-header ui-bar-d" role="banner">
    <h1 class="ui-title" tabindex="0" role="heading" aria-level="1">Add Synergy Thing</h1>
		</div>

		<div data-role="content" data-theme="c" class="ui-content ui-body-c" role="main">
			<h1>Delete this from your collection?</h1>
			 <p><code><%= '/' + params[:uri] %> </code></p>
			<%= button_to 'Delete', '/delete/' + params[:uri], {'data-role' => "button", 'data-theme' => "b", 'class' => "ui-btn ui-btn-corner-all ui-shadow ui-btn-up-b", :method => :delete}  %> 
			<% @type = Entity.where(:uri => '/' + params[:uri])[0]['type'] %>

			<% if @type == "thing" %>
		 	<%= link_to things_all_path, {'data-role'=>'button', 'data-theme'=>"c", 'class' => "ui-btn ui-btn-corner-all ui-shadow ui-btn-up-c"} do %> <span class="ui-btn-inner ui-btn-corner-all"><span class="ui-btn-text">Back</span></span><%end%>    
			<% else %>
		 	<%= link_to spaces_all_path, {'data-role'=>'button', 'data-theme'=>"c", 'class' => "ui-btn ui-btn-corner-all ui-shadow ui-btn-up-c"} do %> <span class="ui-btn-inner ui-btn-corner-all"><span class="ui-btn-text">Back</span></span><%end%>  
                        <% end %> 
		</div>
	</div>
