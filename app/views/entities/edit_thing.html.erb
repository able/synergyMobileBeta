<div data-role="page" id="mainpage">

<div data-role="header">
  <h1>New Thing</h1>
    <%= link_to 'Back', '#', {"class" => "ui-btn-left", "data-rel"=>"back", "data-icon"=>"arrow-l"} %>
</div>

<div data-role="content">


<%= form_for(@entity, :url => entities_update_thing_path(@entity),
	:html => {:method => :put}) do |f| %>
  <%= render 'shared/error_messages', :target => @entity %>
  <%= render 'fields_thing', :f => f %>
  <div class="actions">
    <%= f.submit "Create"%>
  </div>
<% end %>

</div>

</div>
